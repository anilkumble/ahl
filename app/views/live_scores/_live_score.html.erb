<div class="panel-body">

    <div class="row">
        <div class="col-xs-2">
            <%= image_tag live_score.match.first_team.logo,width: "40", height: "25", class: "img-responsive livescore-style" %>
        </div>
        <div class="col-xs-3 set-down">
            <%=  live_score.match.first_team.name %>
        </div>
        <div class="col-xs-2 set-down">
            <span id="teamone_score">
                <%= live_score.teamone_goals %></span>
                -&nbsp;
            <span id="teamtwo_score"><%= live_score.teamtwo_goals %>
            </span>
        </div>
        <div class="col-xs-3 set-down">
            <%= live_score.match.opponent_team.name %>
        </div>

        <div class="col-xs-2">
            <%= image_tag live_score.match.opponent_team.logo,height: "25", width: "40", class: "img-responsive livescore-style" %>
        </div>
    </div>
<br>
        <div class="text-center">
            <%= link_to @current_match, class: "btn btn-block btn-danger match-button" do%>
                GO TO MATCH CENTER&nbsp;<span class="glyphicon glyphicon-chevron-right"></span>
            <% end %>
        </div>
</div>


