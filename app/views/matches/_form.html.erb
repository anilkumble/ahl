<%= form_for(@match, remote: true) do |f| %>

   <!--printing out the errors -->
   <div class="alert alert-danger" id="notice" hidden></div>
  <% if @match.errors.any? %>
        <div class="alert alert-danger">
           <ul>
              <% @match.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
              <% end %>
          </ul>
      </div>
  <% end %>

  <!-- Form starts here -->
  <div class="form-group">

      <%= f.label :team1_id , class: "control-label"%>
      <br>
      <%= f.collection_select :team1_id, Team.all, :id, :team_name, prompt: true %>
      <!-- code generated by collection_helper is same as the following -->
      <!--<select name="match[team1_id]">
          <option value="">Please select</option>
          <% Team.all.each do |t| %>
            <option value="<%= t.id %>">
                <%= t.name.downcase.capitalize %>
            </option>
          <% end %>
      </select>-->

  </div>

 <div class="form-group">
     <%= f.label :team2_id , class: "control-label"%><br>
     <%= f.collection_select :team2_id, Team.all, :id, :team_name, prompt: true %>
</div>

<div class="form-group">
    <%= f.label :time , class: "control-label"%><br>
    <%= f.datetime_select :time, class: "form-control" %>
</div>

<% if @match.persisted? %>
    <div class="form-group">
        <%= f.check_box :running %>
        <%= f.label :running, "Match started" %>
    </div>
<% end %>

 <div class="form-group">
    <%= f.submit class: "btn btn-danger"%>
</div>

<% end %>
